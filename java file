public void createNewOptions(){
    System.out.println("Would you like to create a TABLE (TAB), INDEX (IND), or a TABLESPACE (TBS)?");
    String create = scan.nextLine();
        switch (create) {
            case "TAB":
            case "tab":
            case "Tab":
                System.out.println("You chose TABLE");
                create = "CREATE TABLE";
                createNewTable();
            break;
            case "IND":
            case "ind":
            case "Ind":
                System.out.println("You chose INDEX");
            break;
            case "TBS":
            case "tbs":
            case "Tbs":
                System.out.println("You chose TABLESPACE");
            break;            
        }   
}

public void createNewTable(){
    
    
    System.out.println("What is the table name?");
    tablename = scan.nextLine();
    System.out.println("What is the schema?");
    schemaname = scan.nextLine(); 
    schematable = schemaname + "." + tablename;
    String create = "CREATE TABLE";
    
    System.out.println("Are you adding this to a specific tablespace? Y/N");
    String tablespace = scan.nextLine();
        switch (tablespace) {
            case "Y":
            case "YES":
            case "yes":
            case "Yes":
                System.out.println("You chose yes");
                System.out.println("What is the name of the tablespace?");
                tbsname = scan.nextLine();
            break;
            case "N":
            case "No":
            case "NO":
            case "no":
                System.out.println("You chose no, default tablespace selected");
                tbsname = "IN USERSPACE1";                     
        }
    
    System.out.println("How many columns would you like to add?");
    int stnum = scan.nextInt();
    int i = 0;
    scan.nextLine();
        do {
            System.out.println("How many columns would you like to add?");
            colname = scan.nextLine();
            System.out.println("What is the datatype of " + colname + "? Integer (INT), Smallint (SINT), Bigint (BINT), Decimal (DEC), Char (CHA), Varchar (VCH), Blob (BLO), Clob (CLO), Date (DAT), or Timestamp (TSP)?");
             datatype = scan.nextLine();                    
                    switch (datatype){
                        case "INT":
                        case "int":
                            System.out.println("You chose Integer");
                            datatype = "INT";
                        break;                        
                        case "SINT":
                        case "sint":
                            System.out.println("You chose Smallint");
                            datatype = "SINT";
                        break;                        
                        case "BINT":
                        case "bint":
                            System.out.println("You chose Bigint");
                            datatype = "BINT";
                        break;                        
                        case "DEC":
                        case "dec":
                            System.out.println("You chose Decimal");
                            datatype = "DEC";
                        break;                        
                                case "CHA":
                                case "cha":
                                    System.out.println("You chose Character");
                                    datatype = "CHAR";
                                break;                        
                                case "VCH":
                                case "vch":
                                    System.out.println("You chose VARCHAR");
                                    datatype = "VARCHAR";
                                break;                        
                                case "BLO":
                                case "blo":
                                    System.out.println("You chose BLOB");
                                    datatype = "BLOB";
                                break;                       
                                case "CLO":
                                case "clo":
                                    System.out.println("You chose CLOB");
                                    datatype = "CLOB";
                                break;                        
                                case "DAT":
                                case "dat":
                                    System.out.println("You chose DATE");
                                    datatype = "DATE";
                                break;                        
                                case "TSP":
                                case "tsp":
                                    System.out.println("You chose TIMESTAMP");
                                    datatype = "TSP";
                                break;                      
                            }
                    switch (datatype){
                        case "DEC":
                            System.out.println("What is the decimal length and precision? Type as length.precision");
                            String lengthprec = scan.nextLine();
                            System.out.println("Do you want this column to have a default value? Y/N");
                            String defval = scan.nextLine();
                                switch (defval){    
                                    case "Y":
                                    case "y":
                                        System.out.println("You chose yes, what would you like the default value to be?"); 
                                        defval = scan.nextLine();                                                                
                                        repstate = (colname + " " + datatype + " " + lengthprec + " " + defval);
                                        //null / not null?
                                        //ScriptList.add(repstate);
                                        System.out.println("Your script has been added to the file");
                                    break;
                                    case "N":
                                    case "n": //don't add the with default 
                                        System.out.println("You chose no");                       
                                        repstate = (colname + " " + datatype + " " + lengthprec);
                                      //ScriptList.add(repstate);
                                        System.out.println("Your script has been added to the file");
                                    break;
                                       }                                                      
                        break;                                
                        case "CHAR":
                        case "VARCHAR":
                            System.out.println("What is the field length?");
                            String charlength = scan.nextLine();
                            System.out.println("Do you want this column to have a default value? Y/N");
                            defval = scan.nextLine();
                                switch (defval){
                                    case "Y":
                                    case "y":
                                    case "YES":
                                    case "yes":
                                        System.out.println("You chose yes, what would you like the default value to be?"); 
                                        defval = scan.nextLine();
                                        repstate = (colname + " " + datatype + "(" + charlength + ") " + defval);                
                                        //ScriptList.add(repstate); 
                                        System.out.println("Your script has been added to the file");
                                    break;
                                    case "N":
                                    case "n":
                                    case "NO":
                                    case "no": 
                                        System.out.println("You chose no");
                                        repstate = (colname + " " + datatype + charlength);
                                       //ScriptList.add(repstate); 
                                        System.out.println("Your script has been added to the file");
                                    break;
                                }
                        break;                              
                        default:
                            repstate = (colname + " " + datatype);                                                                                           
                           //ScriptList.add(repstate);
                            System.out.println("Your script has been added to the file");
                        break;    
                    }                                                   
                    
                    
                    
            i++;            
        } while (i<stnum);
   
    System.out.println("Is this table a part of replication?");
    String replication = scan.nextLine();
        switch (replication) {
            case "yes":
            case "YES":
            case "Yes":
                System.out.println("You chose yes");
                System.out.println("Does replication occur from Blue Zone to Green Zone? Y/N");
                String repbzgz = scan.nextLine();
                    switch (repbzgz){
                        case "YES":
                        case "yes":
                        case "Yes":
                            System.out.println("Replication occurs from Blue Zone to Green Zone");
                        break;
                        case "NO":
                        case "No":
                        case "no":
                            System.out.println("Replication occurs from Green Zone to Blue Zone");
                        break;
                    } 
            
        }
        
        
    String createTable = (create + " " + " IN " + tbsname); //this will be added to
    //add this to 
    

    System.out.println("What is the tablespace?");
    //String tablespace = scan.nextLine();
    //add to an array? 
    


    //add to an array? 
    //what is the syntax for adding a table 
    
    
    //ask would you like to add anything to the table
    //permissions? 
    //are you creating the tablespace AND the table? or is the tablespace already created.
    
    //ask the column names, etc. same code.
    
    
    
    //null/not null
    //in (where is table being created)
    //do you ask about replication? 
    
    
}

public boolean contScriptGen() {
    System.out.println("Do you want to generate another set of SQL scripts? Y/N");
    String x = scan.nextLine();
    
    switch(x){
        case "yes":
        case "YES":
        case "Yes":
        case "y":
        case "Y":
            contScriptGen = true;
        break;
        default:
            contScriptGen = false;        
    }
    return contScriptGen;
}

public void printResults(){
    
    System.out.println("Script Execution on Blue Zone:");
    System.out.println(" ");
    for (int t = 0; t < BZList.size(); t++){
	System.out.println(BZList.get(t));
}
    System.out.println(" ");
    System.out.println(" ");
    System.out.println("Script Execution on Green Zone:");
    System.out.println(" ");
    for (int s = 0; s < GZList.size(); s++){
       System.out.println(GZList.get(s));
   }
}

public void writeBZScriptFile(){
 try{
         FileWriter writeFile = new FileWriter("BZScripts.sql");
         BufferedWriter out = new BufferedWriter(writeFile);
         for(int t = 0; t < BZList.size(); t++){
            out.write(BZList.get(t));
            out.newLine();
         }
         out.close();
      }
      catch(IOException ioe){
         System.out.println("Exception: " + ioe);
      }
  }  

public void writeGZScriptFile(){
 try{
         FileWriter writeFile = new FileWriter("GZScripts.sql");
         BufferedWriter out = new BufferedWriter(writeFile);
         
         for(int t = 0; t < GZList.size(); t++){
            out.write(GZList.get(t));
            out.newLine();
         }
         out.close();
      }
      catch(IOException ioe){
         System.out.println("Exception: " + ioe);
      }
  }

}
