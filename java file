                                default:
                                    repstate = (commandopt + " " + colname + " " + datatype);                                                                                       
                                    //ScriptList.add(repstate);
                                    AlterList.add(repstate);
                                    System.out.println("Is this column included in replication? Y/N");
                                    colrep = scan.nextLine();
                                        switch (colrep){
                                            case "Y":
                                            case "y":
                                            case "yes":
                                            case "Yes":
                                            case "YES":
                                                    InsertList.add(schematable);
