                            datatype = "CHAR";
                        break;
                        case "VCH":
                        case "vch":
                            System.out.println("You chose VARCHAR");
                            datatype = "VARCHAR";
                        break;	
                    }	
                    switch (datatype) {
                        case "DEC":
                            System.out.println("What is the new decimal length and precision? type as length,precision");
                            String lengthprec = scan.nextLine();
                            repstate = (commandopt + " " + colname + " " + setData + " " + datatype + " (" + lengthprec + ")");
                            AlterList.add(repstate);
                        break;
                        case "CHAR":
                        case "VARCHAR":
                            System.out.println("What is the new field length?");
                            String charlength = scan.nextLine();
                            System.out.println("Do you want this column to have a default value? Y/N");
                            String defval = scan.nextLine();
                            switch (defval) {
                                case "Y":
                                case "y":
                                    System.out.println("You chose yes, what would you like the default value to be?");
                                    defval = scan.nextLine();
                                    repstate = (commandopt + " " + colname + " " + setData + " " + datatype + "(" + charlength + ") " + defval);
                                    AlterList.add(repstate);
                                break;
                                case "N":
                                case "n":
                                    System.out.println("You chose no");
                                    repstate = (commandopt + " " + colname + " " + setData + " " + datatype + "(" + charlength + ")");
                                    AlterList.add(repstate);
                                break;	
                            }	
                        break;
                    }
                i++;	
                } while (i < stnum);

                String altStatement = ("ALTER TABLE " + schematable);
                BZList.add(altStatement);
                GZList.add(altStatement);

                for (int j=0; j<AlterList.size(); j++) {
                        BZList.add(AlterList.get(j));
                        GZList.add(AlterList.get(j));
                }
               
                terminator = ";";
                BZList.add(terminator);
                GZList.add(terminator);
                
