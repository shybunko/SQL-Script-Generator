            break; */
            case "C":
            case "c":
            case "Cha":
            case "cha":
            case "CHA":
            case "Change":
            case "change":
            case "CHANGE":
                commandopt = "ALTER COLUMN";
                String setData = "SET DATA TYPE";
                System.out.println("How many columns would you like to change?");
                stnum = scan.nextInt();
                i = 0;
                scan.nextLine();
                do {
                    System.out.println("Name the column you are changing the length to:");
                    colname = scan.nextLine();
                    System.out.println("What is the datatype of " + colname + "? Decimal (DEC), Char (CHA), Varchar (VCH)?");
                    datatype = scan.nextLine();
                    switch (datatype) {
                        case "DEC":
                        case "dec":
                            System.out.println("You chose DECIMAL");
                            datatype = "DEC";
                        break;
                        case "CHA":
                        case "cha":
