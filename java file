                                case "DECIMAL":
                                    System.out.println("What is the decimal length and precision? Type as length,precision");
                                    String lengthprec = scan.nextLine();
                                    repstate = (commandopt + " " + colname + " " + datatype + " (" + lengthprec + ")");
                                    AlterList.add(repstate);
                                    System.out.println("Is this column included in replication? Y/N");
                                    colrep = scan.nextLine();
                                    switch (colrep){
                                            case "Y":
                                            case "y":
                                            case "yes":
                                            case "Yes":
                                            case "YES":
                                                InsertList.add(schematable);
                                                InsertList.add(schemaname);
                                                InsertList.add(tablename);
                                                InsertList.add(colname);
                                                InsertList.add(colname);                                                         
                                            break;
                                            case "N":
                                            case "n":
                                            case "No":
                                            case "no":
                                            case "NO":
                                                colrep = "NO";
                                                columnrep = false;
                                            break;
                                    }                                                                                           
                                break;                               
                                case "CHAR":
                                case "VARCHAR":
                                    System.out.println("What is the field length?");
                                    String charlength = scan.nextLine();
                                    System.out.println("Do you want this column to have a default value? Y/N");
                                    String defval = scan.nextLine();
                                        switch (defval){
                                            case "Y":
                                            case "y":
                                            case "YES":
                                            case "yes":
                                                System.out.println("You chose yes, what would you like the default value to be?"); 
                                                defval = scan.nextLine();
                                                repstate = (commandopt + " " + colname + " " + datatype + "(" + charlength + ")" + " " + defval);       
                                                AlterList.add(repstate);
                                                System.out.println("Is this column included in replication? Y/N");
                                                colrep = scan.nextLine();
                                                    switch (colrep){
                                                        case "Y":
                                                        case "y":
                                                        case "yes":
                                                        case "Yes":
                                                        case "YES":
                                                            InsertList.add(schematable);
                                                            InsertList.add(schemaname);
                                                            InsertList.add(tablename);
                                                            InsertList.add(colname);
                                                            InsertList.add(colname);                                                         
                                                        break;
                                                        case "N":
                                                        case "n":
                                                        case "No":
                                                        case "no":
                                                        case "NO":
                                                            colrep = "NO";
                                                            columnrep = false;
                                                    }
                                                System.out.println("Your script has been added to the file");                                           
                                            break;                                
                                            case "N":
                                            case "n":
                                            case "NO":
                                            case "no": 
                                                System.out.println("You chose no");
                                                repstate = (commandopt + " " + colname + " " + datatype + "(" + charlength + ")");
                                                //ScriptList.add(repstate); 
                                                AlterList.add(repstate);
                                                System.out.println("Is this column included in replication? Y/N");
                                                colrep = scan.nextLine();
                                                    switch (colrep){
                                                        case "Y":
                                                        case "y":
                                                        case "yes":
                                                        case "Yes":
