                BZList.add(repstate4);
                GZList.add(repstate4);
                altStatement = ("ALTER TABLE " + schemaname + change + tablename );
                BZList.add(altStatement);
                
                for (int j =0; j<AlterList.size(); j++) {
                        BZList.add(AlterList.get(j));
                }
                
                terminator = ";";
                BZList.add(terminator);
                
                blue = (callSysproc + schemaname + change + tablename + ";");
                BZList.add(blue);
                blue2 = (callSysproc2 + schemaname + change + tablename + ";");
                BZList.add(blue2);
                blue3 = (callSysproc3 + schemaname + change + tablename + ";");
                BZList.add(blue3);                    
                System.out.println("Your script has been added to the file");
        }      
}

public void gzreplication(){
       
    System.out.println("Would you like to Add (A), or Change Column Length/Data type (C)?");
    String commandopt = scan.nextLine();
        switch (commandopt){
            case "A":
            case "a":
            case "add":
            case "Add":
            case "ADD":
                GZList.add(repstate);
                GZList.add(repstate2);
                BZList.add(repstate);
                BZList.add(repstate2);
                commandopt = "ADD COLUMN";
                System.out.println("How many columns would you like to add?");
                int stnum = scan.nextInt();
                int i = 0;
                scan.nextLine();
                    do{
                        System.out.println("What is the column name?");
                        colname = scan.nextLine();
                        System.out.println("What is the datatype of " + colname + "? Integer (INT), Smallint (SINT), Bigint (BINT), Decimal (DEC), Char (CHA), Varchar (VCH), Blob (BLO), Clob (CLO), Date (DAT), or Timestamp (TSP)?");
                        datatype = scan.nextLine();                    
                            switch (datatype){
                                case "INT":
                                case "int":
                                    System.out.println("You chose Integer?");
                                    datatype = "INTEGER";
                                break;                        
                                case "SINT":
                                case "sint":
                                    System.out.println("You chose Smallint");
                                    datatype = "SINT";
                                break;                        
                                case "BINT":
                                case "bint":
                                    System.out.println("You chose Bigint");
                                    datatype = "BINT";
                                break;                        
                                case "DEC":
                                case "dec":
