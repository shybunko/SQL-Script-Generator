final ArrayList<String> BZList = new ArrayList<>(); //arraylist to hold blue zone replication statements
final ArrayList<String> GZList = new ArrayList<>(); //arraylist to hold green zone replication statements    
private boolean contScriptGen = true;
private String statement; //the SQL statement the user creates
