public static void main(String[] args) {
       boolean contScriptGen = true;
       //String statement;      
       ScriptGenerator Generate = new ScriptGenerator();
             
       do{
       Generate.Optionsmenu();       
       contScriptGen = Generate.contScriptGen();       
       Generate.writeBZScriptFile();
       Generate.writeGZScriptFile();
       
       } while (contScriptGen);
           Generate.printResults();
           Generate.writeBZScriptFile();  
           Generate.writeGZScriptFile();
    }
   
public void Optionsmenu(){
     System.out.println("Welcome to the SQL Script Generator, what would you like to do? Here are some options:");
     System.out.println(" ");
     System.out.println("Do you want to Alter (ALT), Insert (INS), or Create New Table (NEW)?"); 
     statement = scan.nextLine();	
     switch(statement) {
         case "ALT":
         case "alt":    
             System.out.println("You chose: ALTER");
	     AlterStatements(); 
	break;             
        case "INS":
        case "ins":
            System.out.println("You chose INSERT");
            InsertStatements();            
        break; 
       // case "DEL":
       // case "del":
       //     System.out.println("You chose DELETE");
      //  break;
        //case "NEW":
        //case "new":
            //System.out.println("You chose CREATE NEW TABLE");
           // createNewTable();                
        default:
            System.out.println("Enter an option:"); //loop through to ask for a valid option
            //work on default 
            //make a "validate" method to take in valid values            
} 
}

public void AlterStatements(){
    System.out.println("What would you like to ALTER? TABLE (TAB), VIEW (VIE), or INDEX (IND)");
    altInput = scan.nextLine();
        switch (altInput){
           case "T":
           case "t":
           case "TAB":
           case "Tab":
           case "tab":
               System.out.println("What is the schema name?");
               altInput = "TABLE";
               schemaname = scan.nextLine();
               System.out.println("What is the table name?");
               tablename = scan.nextLine();
               schematable = (schemaname + "." + tablename);   
               alterIn = altInput + " " + schematable;
           break;           
           case "vie":
           case "VIE":
           case "Vie":
           case "V":
           case "v":
               System.out.println("What is the view name to be altered?");
               altInput = "VIEW";
               //schematable = scan.nextLine();
               //make other variables for these? 
           break;           
           case "IND":
           case "ind":
           case "Ind":
           case "I":
           case "i":
               System.out.println("What is the index name to be altered?");
               altInput = "INDEX";
               //schematable = scan.nextLine(); 
               //make other variables for these? 
           break;           
           default:
               System.out.println("Please enter an option:");
               //schematable = scan.nextLine();
               //make other variable for this? 
        }
        System.out.println("Is there replication for this table? Y/N");        
        String replication = scan.nextLine();

                switch (replication){
                        case "Y":
                        case "y":
                        case "yes":
                        case "YES":
                            System.out.println("Does replication go from Blue Zone to Green Zone? Y/N");
                            String repbzgz = scan.nextLine();
                                switch (repbzgz){
                                    case "Y":
                                    case "y":
                                    case "YES":
                                    case "Yes":
                                    case "yes":
                                        System.out.println ("Replication occurs from Blue Zone to Green Zone");
                                        String datacap = " DATA CAPTURE NONE;";
                                        repstate = ("ALTER " + alterIn + datacap);
                                        //BZList.add(repstate);
                                        //GZList.add(repstate);
                                        repstate2 = ("ALTER " + alterIn);
                                        //BZList.add(repstate2);
                                        //GZList.add(repstate2);
                                        bzreplication();
                             
                                    break;
                                    case "N":
                                    case "n":
                                    case "NO":
                                    case "No":
                                    case "no":
                                        System.out.println("Replication occurs from Green Zone to Blue Zone");
                                        datacap = " DATA CAPTURE NONE;";
                                        repstate = ("ALTER " + alterIn + datacap);
                                        //GZList.add(repstate);
                                       // BZList.add(repstate);
                                        repstate2 = ("ALTER " + alterIn);
                                        //GZList.add(repstate2);
                                        //BZList.add(repstate2);
                                        gzreplication();     
                                    break;
                                }                                
                        break;          
                        case "N":
                        case "n":
                        case "NO":
                        case "No":
                        case "no":
                            System.out.println("No replication for this table");
                            repstate = "ALTER " + alterIn;
                            BZList.add(repstate);
                            GZList.add(repstate);
                            noreplication();
                }             
}    

public void bzreplication(){
    
    System.out.println("Would you like to Add (A), or Change Column Length (C)?");
    String commandopt = scan.nextLine();
        switch (commandopt){
            case "A":
            case "a":
            case "add":
            case "Add":
            case "ADD":
                GZList.add(repstate);
                GZList.add(repstate2);
                BZList.add(repstate);
                BZList.add(repstate2);
                commandopt = "ADD COLUMN";
                System.out.println("How many columns would you like to add?");
                int stnum = scan.nextInt();
                int i = 0;
                scan.nextLine();
                    do{
                        System.out.println("What is the column name?");
                        colname = scan.nextLine();
                        System.out.println("What is the datatype of " + colname + "? Integer (INT), Smallint (SINT), Bigint (BINT), Decimal (DEC), Char (CHA), Varchar (VCH), Blob (BLO), Clob (CLO), Date (DAT), or Timestamp (TSP)?");
                        datatype = scan.nextLine();                    
                            switch (datatype){
                                case "INT":
                                case "int":
                                    System.out.println("You chose Integer");
                                    datatype = "INTEGER";
                                break;                        
                                case "SINT":
                                case "sint":
                                    System.out.println("You chose Smallint");
                                    datatype = "SINT";
                                break;                        
                                case "BINT":
                                case "bint":
