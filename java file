                                BZList.add(blue3);
                                                                       
                                String blue2A = ("ALTER " + altInput + " " + schemaname + change + tablename);
                                BZList.add(blue2A);
                                    
                                for(int j=0; j<AlterList.size(); j++) {
                                    BZList.add(AlterList.get(j));
                                    }
                                
                                terminator = ";";
                                BZList.add(terminator);                                   
                                    //this is the insert into... statement
                                    int insertListOffset = 5;
                                    int count = 0;
                                        for (int k=0; k<InsertList.size()/insertListOffset; k++) {
                                            bluerep = (bzrep + "'" + InsertList.get(count) + "',"); 
                                            count++; 
                                            //to get the second element in the array
                                            bluerep2 = (bzrep2 + "'" + InsertList.get(count) + "',");
                                            count++;
                                            //to get the third element in the array
                                            bluerep3 = ("'" + InsertList.get(count) + "'," + bzrep3);
                                            count++; 
                                            //to get the 4th element in the array
                                            bluerep4 = ("'" + InsertList.get(count) + "',");
                                            count++;
                                            bluerep5 = (bzrep4 + "'" + InsertList.get(count) + "');");
                                            count++;
                                            bluerepfinal = (bluerep + bluerep2 + bluerep3 + bluerep4 + bluerep5);
                                            BZList.add(bluerepfinal);                      
                                    }                                                                
                                String greenrep = (greenzone + tablename + greenzone2 + schemaname + greenzone3 + tablename + greenzone4 + schemaname + "');");
                                GZList.add(greenrep);
                                    
                                String greenrep2 = (greenzoneA + tablename + greenzone2A + schemaname + greenzone3A + tablename + greenzone4A + schemaname + "');");
                                GZList.add(greenrep2);                                                                                                 
            break;
          /*  case "D":
            case "d":
            case "DROP":
            case "drop":
            case "Drop":
